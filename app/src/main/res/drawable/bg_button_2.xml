<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="@integer/config_navAnimTime"
    android:enterFadeDuration="@integer/config_navAnimTime">
    <item  android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/grey"/>
            <corners android:radius="@dimen/normal_radius"/>
            <stroke android:color="@color/colorPrimary" android:width="@dimen/cardview_default_radius"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/normal_radius">
            </corners>
            <stroke android:color="@color/colorPrimary" android:width="@dimen/cardview_default_radius"/>
        </shape>
    </item>
</selector>
